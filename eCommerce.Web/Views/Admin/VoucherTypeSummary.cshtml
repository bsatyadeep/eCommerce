@model IEnumerable<eCommerce.Model.VoucherType>

@{
    ViewBag.Title = "Voucher TypeS";
}
<div class="container">
    <div class="row">
        <h4>Voucher Types Summary</h4>
        <br/>
        <table class="table table-bordered table-condensed table-responsive table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.VoucherModule)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.VoucherModule)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditVoucherType", new {id = item.VoucherTypeId}) |                        
                        @Html.ActionLink("Delete", "DeleteVoucherType", new {id = item.VoucherTypeId})
                    </td>
                </tr>
            }

        </table>
    </div>
</div>